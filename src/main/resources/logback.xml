<configuration scan="true" scanPeriod="5 seconds">

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%msg%n</pattern>
		</encoder>
	</appender>

	<appender name="UI_MESSAGE_DEBUG"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>log/ui/message.txt</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>log/ui/message-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
			<maxHistory>15</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}	-%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.pan" level="DEBUG" additivity="false">
		<appender-ref ref="UI_MESSAGE_DEBUG" />
		<appender-ref ref="STDOUT" />
	</logger>

</configuration>
